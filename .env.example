# DSMS Environment Configuration
# Copy this file to .env and fill in your values

# MongoDB Atlas connection string
# Get this from: https://cloud.mongodb.com/
MONGODB_URI=mongodb+srv://<username>:<password>@cluster.xxxxx.mongodb.net/flyt-dsms?retryWrites=true&w=majority

# Redis (for production WebSocket & Celery)
# Get free Redis from: https://upstash.com/
REDIS_URL=redis://localhost:6379

# Django Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=True

# Allowed hosts (comma-separated for production)
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS allowed origins (comma-separated for production)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
